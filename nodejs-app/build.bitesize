project: sample
components:
  - name: node-app
    os: linux
    dependencies:
      - type: debian-package
        package: nodejs
    repository:
      git: git@github.com:thilinapiy/bitesize-sample-apps.git
      branch: nodejsapp1-v2.0.10
    build:
      - shell: sudo mkdir -p /app
      - shell: sudo cp -rf * /app
      - shell: sudo /usr/local/bin/fpm -s dir -n node-app --iteration $(date "+%Y%m%d%H%M%S") -t deb /app
    artifacts:
      - location: "*.deb"

